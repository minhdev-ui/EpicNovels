<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh tìm kiếm -->
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Nhập tên nội dung, kênh..."
            android:inputType="text" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm"
            android:textColor="@android:color/white"
            app:backgroundTint="#039BE5"
            app:iconTint="#039BE5"
            app:rippleColor="#039BE5"
            app:strokeColor="#039BE5" />

    </LinearLayout>

    <!-- Hàng sự lựa chọn -->
    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchLayout"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/danhChoBanTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dành cho bạn"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/discoverTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Khám phá"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/articlesTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bài viết"
            android:gravity="center"
            android:textColor="@android:color/black" />

    </LinearLayout>
    <!-- Nội dung chính -->

    <View
        android:id="@+id/underlineView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bright_blue" />

    <!-- Thanh menu ngang ở dưới đáy màn hình -->
    <LinearLayout
        android:id="@+id/bottomMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:padding="15dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:contentDescription="Thông báo"
            android:padding="15dp"
            android:src="@drawable/ic_notification" />

        <ImageView
            android:id="@+id/accountIcon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:contentDescription="Quản lý tài khoản"
            android:padding="15dp"
            android:src="@drawable/ic_account" />

    </LinearLayout>


</RelativeLayout>

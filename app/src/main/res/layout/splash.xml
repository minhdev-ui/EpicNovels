<?xml version="1.0" encoding="utf-8"?>
<!-- splash_layout.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/splash_view"
                android:background="#fff">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="EpicNovels"
            android:textColor="#039BE5"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:layout_marginBottom="26dp" android:layout_above="@+id/logo_image"/>
    <ImageView
            android:id="@+id/logo_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_app_logo"
            android:layout_centerInParent="true" />

    <Button
            android:id="@+id/login_button"
            android:layout_width="233dp"
            android:layout_height="71dp"
            android:layout_below="@+id/logo_image"
            android:layout_alignStart="@+id/logo_image"
            android:layout_alignLeft="@+id/logo_image"
            android:layout_marginStart="-14dp"
            android:layout_marginLeft="-14dp"
            android:layout_marginTop="19dp"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:layout_marginBottom="-335dp"
            android:background="#039BE5"
            android:text="Login"
            android:textSize="20sp"
            app:backgroundTint="#039BE5"/>
    <Button
            android:id="@+id/signIn_button"
            android:layout_width="233dp"
            android:layout_height="71dp"
            android:layout_below="@+id/logo_image"
            android:layout_marginTop="120dp"
            android:background="#039BE5"
            android:text="Sign up"
            android:textSize="20sp"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            app:backgroundTint="#039BE5" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignLeft="@+id/login_button" android:layout_alignStart="@+id/login_button"/>


    <!-- Add any additional views or animations here -->

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <!-- Tên tài khoản tác giả -->
        <RelativeLayout
            android:id="@+id/authorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                    android:id="@+id/authorNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản tác giả"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" android:layout_toStartOf="@+id/followButton"
                    android:layout_marginRight="193dp" android:layout_marginEnd="193dp"
                    android:layout_toLeftOf="@+id/followButton" android:layout_alignTop="@+id/followButton"
                    android:layout_marginTop="13dp"/>
            <Button
                    android:id="@+id/followButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Theo dõi" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>

        </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <!-- Tên truyện -->
            <TextView
                    android:id="@+id/storyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Tên truyện"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            <!-- Đoạn mô tả truyện -->
            <TextView
                    android:id="@+id/storyDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Một cuộc giao dịch đã bắt cô ấy phải hiến thân cho người đàn ông tôn kính nhất, đáng sợ nhất ở thành phố Đông Lăng. Ban ngày, cô ấy là một người con gái bình thường như bao cô gái khác nhưng ban đêm cô lại trở thành món đồ chơi của anh ta… Hai tay cô bị ép dưới ngực anh, khuôn mặt kinh hoảng: “Nếu anh dám làm loạn, tôi… tôi sẽ tố cáo anh.” Anh nhấc cằm cô lên, cười tà mị nói: “Cả cái thành phố Đông Lăng này là thiên hạ của tôi, em dám tố cáo tôi sao?”"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            <!-- Trạng thái của truyện -->
            <TextView
                    android:id="@+id/storyStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Trạng thái truyện"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            <!-- Thanh lưu list chap -->

            <!-- Hình ảnh minh hoạ truyện -->
            <SeekBar
                    android:id="@+id/chapterSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="16dp" />

            <ImageView
                    android:id="@+id/storyImage"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/danhmonchiai" />

            <!-- Đánh giá và bình luận -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"/>

            <!-- Đánh giá -->
            <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            <!-- Bình luận -->
            <EditText
                    android:id="@+id/commentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Viết bình luận..."
                    android:maxLines="5" />

            <Button
                    android:id="@+id/postCommentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng bình luận" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
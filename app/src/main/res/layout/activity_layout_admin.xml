<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="#039BE5"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EpicNovels Admin"
        />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp" android:layout_below="@+id/toolbar">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="0dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
            >
                <ImageView
                        android:id="@+id/accountIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="15dp"
                        android:src="@drawable/ic_account"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:layout_toEndOf="@+id/accountIcon" android:layout_toRightOf="@+id/accountIcon"
                        android:layout_marginStart="10dp" android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" android:layout_alignParentTop="true"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>